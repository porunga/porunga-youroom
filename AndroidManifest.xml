<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.porunga.youroomclient" android:versionCode="1"
	android:versionName="0.5" android:installLocation="preferExternal">

	<uses-permission android:name="android.permission.INTERNET"></uses-permission>

	<uses-sdk android:minSdkVersion="5" android:targetSdkVersion="10" />
	<supports-screens android:smallScreens="true"
		android:normalScreens="true" android:largeScreens="true"
		android:anyDensity="true" />

	<application android:label="@string/app_name"
		android:name="com.porunga.youroomclient.AppHolder" android:debuggable="true"
		android:icon="@drawable/pollux_icon">
		<activity android:label="@string/app_name"
			android:name="com.porunga.youroomclient.RoomActivity"
			android:configChanges="orientation"></activity>
		<activity android:name="com.porunga.youroomclient.LoginActivity"
			android:configChanges="orientation" android:windowSoftInputMode="adjustResize"></activity>
		<activity android:name="com.porunga.youroomclient.EntryActivity"
			android:configChanges="orientation"></activity>
		<activity android:name="com.porunga.youroomclient.CreateEntryActivity"
			android:configChanges="orientation" android:windowSoftInputMode="adjustResize"></activity>
		<activity android:name="com.porunga.youroomclient.GroupActivity"
			android:configChanges="orientation">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<service android:name="com.porunga.youroomclient.CheckUpdateService"></service>
		<activity android:name="com.porunga.youroomclient.SettingActivity"></activity>
		<receiver android:name="StartReceiver"
			android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED"></action>
				<category android:name="android.intent.category.DEFAULT"></category>
			</intent-filter>
		</receiver>
		<service android:name="com.porunga.youroomclient.CacheDeleteService"></service>

	</application>
</manifest>
